@using SaleHelder.Application.ViewModels.Department
@model List<DepartmentViewModel>


<div class="container-fluid">
    <div class="mb-3">
        <a class="btn btn-lg btn-primary" asp-controller="Department" asp-action="Create">
            <i class="fas fa-plus-circle mr-2"></i>Agregar Departamento
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle mr-2"></i>No hay departamentos registrados en la base de datos.
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            @foreach (DepartmentViewModel department in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h5 class="card-title">Nombre del departamento: @department.Name</h5>
                        </div>
                        <div class="card-body">
                            <!-- Agrega más detalles si es necesario -->
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-danger" asp-controller="Department" asp-action="DeleteConfirm" asp-route-id="@department.Id">
                                <i class="fas fa-trash-alt mr-1"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
