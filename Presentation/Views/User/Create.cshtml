@using SaleHelder.Application.ViewModels.User
@model SaveUserViewModel

<div class="container mt-5">
    <form method="post" asp-controller="User" asp-action="Create">
        <div class="mb-3">
            <label asp-for="@Model.UserName" class="form-label">Nombre de usuario:</label>
            <input asp-for="@Model.UserName" class="form-control" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Password" class="form-label">Contraseña:</label>
            <input asp-for="@Model.Password" type="password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Nombres:</label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Lastname" class="form-label">Apellidos:</label>
            <input asp-for="@Model.Lastname" class="form-control" />
            <span asp-validation-for="@Model.Lastname" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.UserType" class="form-label">Tipo de usuario:</label>
            <select asp-for="@Model.UserType" class="form-select">
                <option value=0>Estandar</option>
                <option value=1>Empleado</option>
                <option value=2>Administrador</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.IdDepartment" class="form-label">Departamento:</label>
            <select asp-for="@Model.IdDepartment" class="form-select">
                @foreach (var dep in Model.departments)
                {
                    <option value=@dep.Id>@dep.Name</option>
                }
            </select>
        </div>

        <input hidden asp-for="@Model.Id" />

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-danger">Volver</a>
    </form>
</div>
