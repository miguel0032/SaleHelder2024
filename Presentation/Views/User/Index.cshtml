@using SaleHelder.Application.ViewModels.User
@model List<UserViewModel>

<div class="container mt-5">
    <div class="text-center mb-3">
        <a class="btn btn-lg btn-primary" asp-controller="User" asp-action="Create">
            <i class="fas fa-user-plus mr-2"></i>Crear usuarios
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <h1 class="text-center text-muted">No hay usuarios</h1>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nombre de usuario</th>
                    <th scope="col">Nombre completo</th>
                    <th scope="col">Departamento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserViewModel user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@($"{user.Name} {user.Lastname}")</td>
                        <td>@user.DepName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
